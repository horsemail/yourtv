<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 焦点状态 -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#333333" /> <!-- 背景深灰色 -->
            <stroke android:width="4dp" android:color="#FFFFFF" /> <!-- 焦点时白色粗边框 -->
            <corners android:radius="8dp" />
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
    <!-- 非焦点状态 -->
    <item>
        <shape>
            <solid android:color="#333333" /> <!-- 背景深灰色 -->
            <stroke android:width="1dp" android:color="#666666" /> <!-- 非焦点时细灰色边框 -->
            <corners android:radius="8dp" />
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp" />
        </shape>
    </item>
</selector>